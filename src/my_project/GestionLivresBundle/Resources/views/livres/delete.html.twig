{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Supprimer livre</h1>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>ISBN</th>
                        <th>Title</th>
                        <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ book.isbn }}</td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.price }}</td>
                        </tr>
                    </tbody>
                </table>

                <button type="submit" class="btn btn-primary">Supprimer</button>
            </div>
        </div>
    </div>
{% endblock %}