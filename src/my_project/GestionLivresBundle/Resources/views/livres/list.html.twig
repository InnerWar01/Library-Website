{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>
                    <a class="isbn" href="{{ path('book_show', {'isbn': book.isbn}) }}">
                        {{ book.isbn }}
                    </a>
                </td>
                <td>{{ book.title }}</td>
                <td>{{ book.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}